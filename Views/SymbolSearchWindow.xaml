<Window x:Class="FinanceManager.Views.SymbolSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔍 Pesquisar Símbolos - Yahoo Finance" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="CanResize"
        MinHeight="400"
        MinWidth="500">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1565C0" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="🔍 Pesquisar Símbolos Financeiros" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Pesquise ações, ETFs, criptomoedas e outros ativos" 
                           FontSize="12" 
                           Foreground="LightBlue" 
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Caixa de pesquisa -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBox x:Name="SearchTextBox" 
                     Width="400" 
                     Height="35" 
                     FontSize="14" 
                     Padding="10"
                     VerticalContentAlignment="Center"
                     Text=""
                     KeyDown="SearchTextBox_KeyDown"
                     BorderThickness="2"
                     BorderBrush="LightBlue"/>

            <Button x:Name="SearchButton" 
                    Content="🔍 Pesquisar" 
                    Width="120" 
                    Height="35" 
                    Margin="10,0,0,0"
                    FontWeight="SemiBold"
                    Background="#1565C0"
                    Foreground="White"
                    BorderThickness="0"
                    Click="Search_Click"/>
        </StackPanel>

        <!-- Resultados -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header da lista -->
                <Border Grid.Row="0" Background="#F5F5F5" Padding="10" CornerRadius="5,5,0,0">
                    <TextBlock x:Name="ResultsHeader" 
                               Text="💡 Digite o nome da empresa ou símbolo (ex: Apple, AAPL, BTC)"
                               FontWeight="SemiBold"
                               Foreground="Gray"/>
                </Border>

                <!-- Lista de resultados -->
                <ListBox x:Name="ResultsListBox" 
                         Grid.Row="1"
                         ItemsSource="{Binding}"
                         MouseDoubleClick="ResultsListBox_MouseDoubleClick"
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="2" Background="White" 
                                    BorderBrush="LightBlue" BorderThickness="1" CornerRadius="3">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Symbol}" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               Foreground="#1565C0"
                                               VerticalAlignment="Center"/>

                                    <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ShortName}" 
                                                   FontWeight="SemiBold" 
                                                   FontSize="13"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding LongName}" 
                                                   FontSize="11" 
                                                   Foreground="Gray"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Type}" 
                                               FontSize="10" 
                                               Foreground="White"
                                               Background="Orange"
                                               Padding="5,2"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Loading indicator -->
                <StackPanel x:Name="LoadingPanel" 
                            Grid.Row="1"
                            Visibility="Collapsed"
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="⏳ Pesquisando..." 
                               FontSize="16" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Aguarde enquanto buscamos os símbolos..." 
                               FontSize="12" 
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Botões -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,15,0,0">

            <Button x:Name="ViewQuoteButton" 
                    Content="📊 Ver Cotação" 
                    Width="120" 
                    Height="35" 
                    Margin="0,0,10,0"
                    FontWeight="SemiBold"
                    Background="Green"
                    Foreground="White"
                    BorderThickness="0"
                    IsEnabled="False"
                    Click="ViewQuote_Click"/>

            <Button x:Name="CloseButton" 
                    Content="❌ Fechar" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,0,0"
                    FontWeight="SemiBold"
                    Background="#E0E0E0"
                    BorderThickness="1"
                    BorderBrush="#CCCCCC"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>